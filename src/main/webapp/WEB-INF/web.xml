<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  

  <!-- servlets -->

  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>com.techblog.servlets.Register</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.techblog.servlets.Login</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>com.techblog.servlets.Logout</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Get-Blogs</servlet-name>
    <servlet-class>com.techblog.servlets.GetBlogs</servlet-class>
  </servlet>






  <!-- jsp page servlets -->

  <servlet>
    <servlet-name>home-page</servlet-name>
    <jsp-file>/index.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>login-page</servlet-name>
    <jsp-file>/login.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>signup-page</servlet-name>
    <jsp-file>/signup.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>about-page</servlet-name>
    <jsp-file>/about.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>contact-page</servlet-name>
    <jsp-file>/contact.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>profile-page</servlet-name>
    <jsp-file>/profile.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>blog-page</servlet-name>
    <jsp-file>/blog.jsp</jsp-file>
  </servlet>






  <!-- servlet mappings -->

  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/Register</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Get-Blogs</servlet-name>
    <url-pattern>/GetBlogs</url-pattern>
  </servlet-mapping>






  <!-- jsp page servlets - mappings -->

  <servlet-mapping>
    <servlet-name>home-page</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>login-page</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>signup-page</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>about-page</servlet-name>
    <url-pattern>/about</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>contact-page</servlet-name>
    <url-pattern>/contact</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>profile-page</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>blog-page</servlet-name>
    <url-pattern>/blog</url-pattern>
  </servlet-mapping>




  <session-config>
    <session-timeout>
      <!-- auto invalidate session in 30 minutes -->
      30
    </session-timeout>
  </session-config>




  <error-page>
    <error-code>404</error-code>
    <location>/error_404.jsp</location>
  </error-page>



</web-app>
